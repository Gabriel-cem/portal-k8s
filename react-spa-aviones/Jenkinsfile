pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: kaniko
    image: gcr.io/kaniko-project/executor:latest
    command:
    - /kaniko/executor
    args:
    - --context=react-spa-aviones
    - --dockerfile=react-spa-aviones/Dockerfile
    - --destination=docker.io/gab741/portal-aviones:latest
    - --verbosity=info
    volumeMounts:
    - name: docker-config
      mountPath: /kaniko/.docker
  volumes:
  - name: docker-config
    secret:
      secretName: dockerhub-kaniko2
"""
    }
  }
  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/Gabriel-cem/portal-k8s.git'
      }
    }
  }
}
