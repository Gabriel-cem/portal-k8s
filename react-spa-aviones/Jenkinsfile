pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: jnlp
    image: jenkins/inbound-agent:alpine
    args: ['\$(JENKINS_SECRET)', '\$(JENKINS_NAME)']
    volumeMounts:
    - name: cemosa-ca
      mountPath: /usr/local/share/ca-certificates/cemosa
  - name: kaniko
    image: gcr.io/kaniko-project/executor:latest
    command:
      - /busybox/sh
    args:
      - -c
      - |
        cp /usr/local/share/ca-certificates/cemosa/*.crt /etc/ssl/certs/ && \
        update-ca-certificates && \
        tail -f /dev/null
    volumeMounts:
    - name: cemosa-ca
      mountPath: /usr/local/share/ca-certificates/cemosa
    - name: kaniko-secret
      mountPath: /kaniko/.docker
  volumes:
  - name: cemosa-ca
    configMap:
      name: cemosa-ca-cert
  - name: kaniko-secret
    secret:
      secretName: dockerhub-kaniko2
"""
    }
  }

  environment {
    DOCKER_IMAGE = "gab741/portal-aviones"
    DOCKER_TAG = "latest"
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build and Push with Kaniko') {
      steps {
        container('kaniko') {
          sh '''
            /kaniko/executor \
              --context=dir://react-spa-aviones \
              --dockerfile=react-spa-aviones/Dockerfile \
              --destination=${DOCKER_IMAGE}:${DOCKER_TAG} \
              --verbosity=info
          '''
        }
      }
    }
  }
}
