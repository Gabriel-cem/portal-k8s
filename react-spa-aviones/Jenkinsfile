pipeline {
  agent {
    kubernetes {
      yaml '''
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: node
    image: node:18-alpine
    command: ['cat']
    tty: true
    volumeMounts:
    - mountPath: /home/jenkins/agent
      name: workspace-volume
  - name: kaniko
    image: gcr.io/kaniko-project/executor:latest
    command:
    - /busybox/cat
    tty: true
    volumeMounts:
    - name: kaniko-secret
      mountPath: /kaniko/.docker
    - mountPath: /home/jenkins/agent
      name: workspace-volume
  volumes:
  - name: workspace-volume
    emptyDir: {}
  - name: kaniko-secret
    secret:
      secretName: dockerhub-kaniko2
'''
    }
  }

  environment {
    IMAGE_NAME = 'gab741/portal-aviones'
    IMAGE_TAG = "${env.BUILD_NUMBER}"
  }

  stages {
    stage('Build React App') {
      steps {
        container('node') {
          dir('react-spa-aviones') {
            sh '''
              npm install
              npm run build
            '''
          }
        }
      }
    }

    stage('Build & Push Docker Image with Kaniko') {
      steps {
        container('kaniko') {
          dir('react-spa-aviones') {
            sh '''
              /kaniko/executor \
                --context `pwd` \
                --dockerfile Dockerfile \
                --destination=$IMAGE_NAME:$IMAGE_TAG \
                --verbosity=info
            '''
          }
        }
      }
    }
  }
}
